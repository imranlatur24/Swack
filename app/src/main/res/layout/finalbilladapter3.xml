<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_2sdp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ltyCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/txt_joborderid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:paddingLeft="@dimen/_3sdp"
                android:text="job order id"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_jobid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/_2sdp"
                android:text="job id"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtJobDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableTint="@color/colorPrimary"
            android:paddingLeft="@dimen/_3sdp"
            android:text="date"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtJobUnique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableTint="@color/colorPrimary"
            android:paddingLeft="@dimen/_3sdp"
            android:text="job date"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/txtJobLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="0.5"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTint="@color/colorGreen"
                android:paddingLeft="@dimen/_3sdp"
                android:text="job date"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>


        <!-- <View
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/btn_login_bg"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/btn_login_bg"
            android:text="----------------------------------" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Garaje Details"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtgarname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableTint="@color/colorRed"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Garage Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/txtgarmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableTint="@color/colorRed"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Garage Mobile"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/btn_login_bg"
            android:text="----------------------------------" />

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="0.3"
                android:background="@drawable/round_corner_rect"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Tracking"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"                android:id="@+id/txt_distance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="0.3fjfj"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:id="@+id/txtJobStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="0.3"
                android:background="@drawable/round_corner_rect_orange"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="job date"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>